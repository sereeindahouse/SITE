<%- include('include/header') %>

<div class="home-guest-bg">
  <div class="container py-3" style="max-width:520px;">
    <h4 class="mb-3 text-white">Forgot password</h4>
    <p class="text-light small">Enter your username. If it exists, you'll be able to reset your password securely.</p>
    <form action="/forgot-password" method="POST" class="auth-card p-3">
      <div class="form-group">
        <label>Username</label>
        <input type="text" class="form-control" name="username" required>
      </div>
      <button class="btn btn-primary">Continue</button>
    </form>
  </div>
</div>

