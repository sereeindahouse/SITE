<%- include('include/header') %>

<div class="home-guest-bg">
  <div class="container py-3" style="max-width:520px;">
    <h4 class="mb-3 text-white">Reset password</h4>
    <form action="/reset-password" method="POST" class="auth-card p-3">
      <input type="hidden" name="token" value="<%= token %>">
      <div class="form-group">
        <label>New password</label>
        <input type="password" class="form-control" name="password" required>
      </div>
      <button class="btn btn-success">Set new password</button>
    </form>
  </div>
</div>

<%- include('include/footer') %>
