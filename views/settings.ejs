<%- include('include/header') %>

<div class="container py-3">
  <h4>Settings</h4>

  <div class="card mb-3">
    <div class="card-body">
      <h6 class="card-title">Security</h6>
      <form action="/settings/password" method="POST">
        <div class="form-group">
          <label>Current password</label>
          <input type="password" class="form-control" name="current" required>
        </div>
        <div class="form-group">
          <label>New password</label>
          <input type="password" class="form-control" name="next" required>
        </div>
        <button class="btn btn-primary">Change password</button>
      </form>
    </div>
  </div>

  <div class="card mb-3">
    <div class="card-body">
      <h6 class="card-title">Profile Photo</h6>
      <form action="/settings/avatar" method="POST">
        <div class="form-group">
          <label>Avatar URL (http/https)</label>
          <input type="url" class="form-control" name="avatar" placeholder="https://example.com/me.jpg" value="<%= (user && user.avatar) ? user.avatar : '' %>">
        </div>
        <button class="btn btn-info">Save photo</button>
      </form>
    </div>
  </div>

  <div class="card">
    <div class="card-body">
      <h6 class="card-title">Personal info</h6>
      <p class="text-muted">Coming soon...</p>
    </div>
  </div>
</div>

<%- include('include/footer') %>
